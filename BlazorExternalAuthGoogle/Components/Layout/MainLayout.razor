@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <AuthorizeView>
                <Authorized>
                    <h5>Hello @context.User.Identity!.Name,</h5>
                    <span>User id: @context.User.Claims.FirstOrDefault(c=> c.Type == Constants.Claims.UserId)?.Value</span>
                </Authorized>
            </AuthorizeView>
            @Body
        </article>
    </main>
</div>
